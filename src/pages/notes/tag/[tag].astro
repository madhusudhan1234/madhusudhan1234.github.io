---
import BaseHead from '../../../components/BaseHead.astro';
import Header from '../../../components/Header.astro';
import Footer from '../../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../../components/FormattedDate.astro';

export async function getStaticPaths() {
  const allNotes: any[] = await getCollection('notes' as any);
  const tags = Array.from(
    new Set(
      allNotes
        .map((n: any) => n.data.tags)
        .filter((t: any) => typeof t === 'string' && t.length > 0)
    )
  );
  return tags.map((t) => ({ params: { tag: t } }));
}

const tag = Astro.params.tag ?? '';
const allNotes: any[] = await getCollection('notes' as any);
const notes = allNotes.filter((n: any) => (n.data.tags ?? '').includes(tag));
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`Notes tagged "${tag}" | JavaScript & Data Structures`} description={`Notes tagged "${tag}" on JavaScript, data structures, backend engineering and practical tips.`} />
    <style>
      main { width: 960px; }
      .heading { color: var(--lightest-slate); margin: 20px 0; }
      ul { display: flex; flex-wrap: wrap; gap: 2rem; list-style-type: none; margin: 0; padding: 0; }
      ul li { width: calc(50% - 1rem); }
      ul li * { text-decoration: none; transition: 0.2s ease; }
      ul li img { margin-bottom: 0.5rem; border-radius: var(--border-radius); }
      ul li a { display: block; }
      .title { margin: 0; color: rgb(var(--black)); line-height: 1; }
      .date { margin: 0; color: rgb(var(--gray)); }
      ul li a:hover h4, ul li a:hover .date { color: rgb(var(--accent)); }
      ul a:hover img { box-shadow: var(--box-shadow); }
      @media (max-width: 720px) {
        ul { gap: 0.5em; }
        ul li { width: 100%; text-align: center; }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1 class="heading">Notes tagged: {tag}</h1>
      <section>
        <ul>
          {
            notes.map((post) => (
              <li>
                <a href={`/notes/${post.id}/`}>
                  {post.data.heroImage && <img width={720} height={360} src={`/${post.data.heroImage}`} alt={post.data.title} loading="lazy" decoding="async" />}
                  <h4 class="title">{post.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
