---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE } from '../../consts';
import { type CollectionEntry, getCollection } from 'astro:content';
import { render } from 'astro:content';

export async function getStaticPaths() {
    const episodes = await getCollection('episodes');
    return episodes.map(entry => ({
        params: { id: entry.data.id.toString() },
        props: entry,
    }));
}

type Props = CollectionEntry<'episodes'>;

const episode = Astro.props;
const { Content } = await render(episode);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${episode.data.title} | ${SITE_TITLE}`} description={episode.data.description} />

		<style>
			.episode-container {
				max-width: 800px;
				margin: 0 auto;
				padding: 0 1rem;
			}
			.episode-detail {
				background: var(--light-navy);
				border-radius: var(--border-radius);
				padding: 2rem;
				border: 1px solid var(--lightest-navy);
			}
			.episode-title {
				font-size: 2rem;
				margin-bottom: 1.5rem;
				color: var(--lightest-slate);
			}
			.episode-description {
				margin-bottom: 2rem;
				line-height: 1.8;
				color: var(--light-slate);
			}
			.back-link {
				display: inline-block;
				margin-bottom: 1rem;
				color: var(--green);
				text-decoration: none;
				font-family: var(--font-mono);
				font-size: var(--fz-sm);
			}
			.back-link:hover {
				text-decoration: underline;
			}
			.episode-meta {
				color: var(--slate);
				margin-bottom: 1rem;
				font-size: 0.9rem;
				font-family: var(--font-mono);
			}
			.episode-tags {
				margin-top: 1.5rem;
				display: flex;
				flex-wrap: wrap;
				gap: 0.5rem;
			}
			.tag {
				background: var(--navy);
				color: var(--green);
				padding: 0.25rem 0.5rem;
				border-radius: var(--border-radius);
				font-size: var(--fz-xs);
				font-family: var(--font-mono);
			}
			audio {
				width: 100%;
				margin-top: 1.5rem;
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="episode-container">
				<a href="/weekly" class="back-link" aria-label="Back to episodes list">← Back to Episodes</a>
					<div class="episode-detail">
						<h1 class="episode-title">Episode #{episode.data.id}: {episode.data.title}</h1>
						<div class="episode-meta">
							Published on: {new Date(episode.data.publishDate).toLocaleDateString()}
							{episode.data.duration && ` • Duration: ${episode.data.duration}`}
						</div>
						<div class="episode-tags">
						{episode.data.tags.split(',').map((tag) => (
							<span class="tag">#{tag}</span>
						))}
					</div>
						<iframe src={episode.data.audioLink} width="100%" height="120" frameborder="0" title={`Episode ${episode.data.id} - ${episode.data.title}`} allow="autoplay">
						</iframe>
					<div class="episode-description">
						<Content />
					</div>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>